{\n  "name": "adarsh-browser",\n  "version": "1.0.0",\n  "description": "Modern browser with AI chat and glassmorphism UI",\n  "main": "backend/main.js",\n  "author": "Adarsh Jaiswal",\n  "license": "MIT",\n  "scripts": {\n    "start": "electron .",\n    "dev": "electron .",\n    "build": "electron-builder",\n    "build:win": "electron-builder --win --publish never",\n    "build:exe": "npm run build:win"\n  },\n  "dependencies": {\n    "electron-squirrel-startup": "^1.1.1"\n  },\n  "devDependencies": {\n    "electron": "^latest",\n    "electron-builder": "^latest",\n    "electron-is-dev": "^latest"\n  },\n  "build": {\n    "appId": "com.adarshjaiswal.browser",\n    "productName": "Adarsh Browser",\n    "directories": {\n      "buildResources": "assets"\n    },\n    "files": [\n      "backend/**/*",\n      "frontend/**/*",\n      "package.json",\n      "node_modules/**/*"\n    ],\n    "win": {\n      "target": [\n        {\n          "target": "nsis",\n          "arch": ["x64"]\n        },\n        {\n          "target": "portable",\n          "arch": ["x64"]\n        }\n      ],\n      "icon": "assets/icon.ico"\n    },\n    "nsis": {\n      "oneClick": false,\n      "allowToChangeInstallationDirectory": true,\n      "createDesktopShortcut": true,\n      "createStartMenuShortcut": true,\n      "shortcutName": "Adarsh Browser"\n    },\n    "portable": {\n      "artifactName": "${productName}-${version}.exe"\n    }\n  }\n}